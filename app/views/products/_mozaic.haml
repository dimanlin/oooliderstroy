#yjsg3
- get_taxonomies.each do |taxonomy|
  - root_taxon = taxonomy.root
  #user1.yjsgxhtml{:style => "width:20%;"}
    .yjsquare_yjnf3
      .yjsquare_in
        .yjnewsflash
          .nfimgpos
            = link_to "/t/#{root_taxon.permalink}" do
              = image_tag root_taxon.icon.url(:normal), :style => "align: top; height: 96px; width: 180px;"
          .yjnf_descr
            = link_to root_taxon.name, "/t/#{root_taxon.permalink}", :class => "yjnewsflash_title"
          .yjnf_descr
            %p
              = root_taxon.description
          %span.yjnsreadon
            = link_to "Подробнее", "/t/#{root_taxon.permalink}", :class => "yjns_rm"

