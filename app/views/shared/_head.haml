%title
  = title
%meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=utf-8'}/
= meta_data_tags
= stylesheet_tags
= csrf_meta_tag
= javascript_include_tag 'mouseover.js', 'caption.js', 'jquery-1.4.2.min', 'mootools.js', 'jquery.validate.min.js', 'rails', 'application', :cache => 'jquery-core'
- unless I18n.locale.to_s[0..1] == 'en'
  = javascript_include_tag ['localization/messages_', I18n.locale.to_s[0..1], '.js'].join
:css
  div.title h1,div.title h2,div.componentheading, h1,h2,h3,h4,h5,h6,.yjround h4,.yjsquare h4, .yjnewsflash_title{
    font-family:"Trebuchet MS", Arial, Helvetica, sans-serif
  }
