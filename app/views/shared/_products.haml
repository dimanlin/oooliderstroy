- paginated_products = @searcher.products if params.key?(:keywords)
- paginated_products ||= products
- if products.empty?
  = t(:no_products_found)
- elsif params.key?(:keywords)
  %h3= t(:search_results, :keywords => h(params[:keywords]))
- if products.any?
  %ul.product-listing
    - products.each do |product|
      - if Spree::Config[:show_zero_stock_products] || product.has_stock?
        .width50
          .teaser-item
            %h2.pos-title
              %a{:href => "http://oooliderstroy.ru/index.php?option=com_zoo&amp;task=item&amp;item_id=2&amp;category_id=1&amp;Itemid=122", :title => "GC-S07HRI"} GC-S07HRI
            .pos-description
              .element.element-textarea.first.last
                %div
                  %p
                    = small_image(product, :stile => "float: left;")
                  %h3
                    = product.name
                  %table.listParam{:border => "0"}
                    %tbody
                      %tr
                        %td Производительность охлаждения
                        %td 2.10 кВт
                      %tr
                        %td Производительность обогрева
                        %td 2.20 кВт
                      %tr
                        %td Уровень шума
                        %td 32/28/25 ДБ
                      %tr
                        %td Циркуляция воздуха
                        %td 380 м³/ч
            %p.pos-links
              %span.element.element-itemlink.first.last
                = link_to "Подробнее...", product
%hr.space/
- if paginated_products.respond_to?(:total_pages)
- params.delete(:search)
- params.delete(:taxon)
  = will_paginate(paginated_products,             |
    :previous_label => "&#171; #{t('previous')}", |
    :next_label => "#{t('next')} &#187;")         |
%hr.space/
