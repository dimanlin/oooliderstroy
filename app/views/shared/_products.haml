- paginated_products = @searcher.products if params.key?(:keywords)
- paginated_products ||= products
- if products.empty?
  = t(:no_products_found)
- elsif params.key?(:keywords)
  %h3= t(:search_results, :keywords => h(params[:keywords]))
- if products.any?
  %ul.product-listing
    - products.each do |product|
      - if Spree::Config[:show_zero_stock_products] || product.has_stock?
        .width50
          .teaser-item
            %h2.pos-title
              = link_to product.name, product
            .pos-description
              .element.element-textarea.first.last
                %div
                  %p
                    = small_image(product, :style => "float: left;")
                  %table.listParam{:border => "0"}
                    %tbody
                      = render :partial => "shared/product_property", :collection => product.product_properties
            %p.pos-links
              %span.element.element-itemlink.first.last
                = link_to "Подробнее...", product
%hr.space/
- if paginated_products.respond_to?(:total_pages)
- params.delete(:search)
- params.delete(:taxon)
  = will_paginate(paginated_products,             |
    :previous_label => "&#171; #{t('previous')}", |
    :next_label => "#{t('next')} &#187;")         |
%hr.space/
